{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2019",
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    // Need to includes `types` key
    // in compiler options to make build works
    // https://stackoverflow.com/a/75934456
    "types": []
  },
  "include": ["src/**/*"]
}
